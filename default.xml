<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <remote name="origin" fetch="ssh://git@github.com/armadito/" />
    <default revision="DEV" remote="origin" />

    <!-- Build tools -->
    <project path="build" name="armadito-build">
        <linkfile src="./configure.ac" dest="configure.ac" />
	<linkfile src="./Makefile.am" dest="Makefile.am" />
        <linkfile src="./autogen.sh" dest="autogen.sh" />
    </project>

    <!-- Core -->
    <project path="core" name="armadito-av.git" revision="DEV" >
        <linkfile src="./build/linux/scripts/build.sh" dest="build.sh" />
    </project>

    <!-- Modules -->
    <project path="modules/mod-pdf" name="armadito-mod-pdf.git" />
    <project path="modules/mod-yara" name="armadito-mod-yara.git" />
    <project path="modules/mod-h1" name="armadito-mod-h1.git" />
    <project path="modules/mod-clamav" name="armadito-mod-clamav.git" />

    <!-- UI -->
    <project path="ui/web-ui" name="armadito-web-ui.git" />
    <project path="ui/systray-ui" name="armadito-systray-ui.git" />

    <!-- Documentation -->
    <project path="doc" name="armadito-doc.git" />
</manifest>
